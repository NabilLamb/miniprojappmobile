<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Taille"
    android:background="@drawable/backround4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ABAB"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"
            android:id="@+id/back4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quel est le type de votre corps ?"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="300dp"
            android:src="@drawable/ectomorph1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ectomorph"
            android:id="@+id/p"
            android:onClick="GoPage"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="150dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="300dp"
                android:src="@drawable/mesomorph2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesomorph"
                android:id="@+id/m"
                android:onClick="GoPage"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="150dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="300dp"
                android:src="@drawable/endomorph3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endomorph"
                android:id="@+id/g"
                android:onClick="GoPage"/>

        </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>